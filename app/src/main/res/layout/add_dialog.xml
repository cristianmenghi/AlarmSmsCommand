<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="24dp">

    <TextView
        android:id="@+id/add_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/add_dialog_title"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorAlertDialogListItem"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/add_dialog_title" />

    <EditText
        android:id="@+id/add_dialog_txt_name"
        style="@style/AlarmSMSCommander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/enter_alarm_name"
        android:inputType="textPersonName"
        android:textColorHint="?android:attr/textColorSecondaryNoDisable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_dialog_title" />

    <EditText
        android:id="@+id/add_dialog_txt_number"
        style="@style/AlarmSMSCommander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="@string/enter_alarm_number"
        android:inputType="textPersonName|phone"
        android:textColorHint="?android:attr/textColorSecondaryNoDisable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_dialog_txt_name" />

    <EditText
        android:id="@+id/add_dialog_txt_password"
        style="@style/AlarmSMSCommander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_alarm_password"
        android:inputType="textPassword"
        android:textColorHint="?android:attr/textColorSecondaryNoDisable"
        android:typeface="sans"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_dialog_txt_number" />

</android.support.constraint.ConstraintLayout>